<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SECW.AdminPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Admin Page"
             BackgroundColor="#1E1E1E">

    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="15" VerticalOptions="Center">
        
            <Label Text="Admin Dashboard"
                   TextColor="DarkOrange"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
                   
            <BoxView HeightRequest="2"
                     BackgroundColor="DarkOrange"
                     HorizontalOptions="Fill" />
            
            <Label Text="Welcome, Admin!"
                   TextColor="White"
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20" />

            <Button x:Name="ManageUsersBtn"
                    Text="Manage Users"
                    BackgroundColor="DarkOrange"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HorizontalOptions="Fill"
                    HeightRequest="50"
                    Margin="0,0,0,10"
                    Clicked="ManageUsersBtn_Click" />

            <Button x:Name="ViewReportsBtn"
                    Text="View Reports"
                    BackgroundColor="DarkOrange"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HorizontalOptions="Fill"
                    HeightRequest="50"
                    Margin="0,0,0,10"
                    Clicked="ViewReportsBtn_Click" />

            <Button x:Name="SettingsBtn"
                    Text="Settings"
                    BackgroundColor="DarkOrange"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HorizontalOptions="Fill"
                    HeightRequest="50"
                    Margin="0,0,0,10"
                    Clicked="SettingsBtn_Click" />

            <Button x:Name="LogoutBtn"
                    Text="Logout"
                    BackgroundColor="#FF4500"
                    TextColor="White"
                    FontSize="18" 
                    FontAttributes="Bold" 
                    CornerRadius="10" 
                    HorizontalOptions="Fill" 
                    HeightRequest="50" 
                    Margin="0,20,0,0" 
                    Clicked="LogoutBtn_Click" />
                    
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
