<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SECW.UserPage"
             BackgroundColor="#f0f0f0">
    <Grid>
        <!-- Header Section -->
        <Grid RowDefinitions="Auto,*">
            <Grid BackgroundColor="#2c3e50" HeightRequest="60">
                <Label Text="User Dashboard"
                       TextColor="White"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>

            <!-- Main Content Section -->
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="20">
                    <!-- Create Report Button -->
                    <Button Text="Create Report"
                            HeightRequest="40"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            FontAttributes="Bold"
                            Clicked="CreateReport_Click" />

                    <!-- View Reports Button -->
                    <Button Text="View Reports"
                            HeightRequest="40"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            FontAttributes="Bold"
                            Clicked="ViewReports_Click" />

                    <!-- Manage Profile Button -->
                    <Button Text="Manage Profile"
                            HeightRequest="40"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            FontAttributes="Bold"
                            Clicked="ManageProfile_Click" />

                    <!-- Sensor Settings Button -->
                    <Button Text="Settings"
                            HeightRequest="40"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            FontAttributes="Bold"
                            Clicked="Settings_Click" />

                    <!-- Logout Button -->
                    <Button Text="Logout"
                            HeightRequest="40"
                            BackgroundColor="#e74c3c"
                            TextColor="White"
                            FontAttributes="Bold"
                            Clicked="Logout_Click" />
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
