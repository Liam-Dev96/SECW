<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="SECW.OperationalManagerPage"
            Title="Operational Manager">
            <ScrollView>
    <StackLayout Padding="20">
        <Label Text="Welcome to the Operational Manager Dashboard" FontSize="24" HorizontalOptions="Center" Margin="0,10,0,0"/>
        <Button Text="Check Battery Status" Clicked="OnCheckBatteryStatusClicked" Margin="0,10,0,0" />

        <Button Text="Maintenance &amp; Calibration" Clicked="CheckMaintenanceAndCalibrationDates" Margin="0,10,0,0" />
        
        <Button Text="Anomalies" Clicked="OnCheckAnomalysClicked" Margin="0,10,0,0" />

        <Button Text="Malfunctions" Clicked="OnCheckMalfunctionsClicked" Margin="0,10,0,0" />

        <Button x:Name="LogoutBtn"
        Text="Logout"
        BackgroundColor="#FF423188"
        TextColor="White"
        FontSize="18"
        FontAttributes="Bold"
        CornerRadius="10"
        HorizontalOptions="Fill"
        HeightRequest="50"
        Margin="0,20,0,0"
        Clicked="LogoutBtn_Click"/>
    </StackLayout>
    </ScrollView>
</ContentPage>